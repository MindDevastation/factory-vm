{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "channel_slug",
    "title",
    "description",
    "tags",
    "assets"
  ],
  "properties": {
    "channel_slug": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "planned_at": {
      "type": "string"
    },
    "assets": {
      "type": "object",
      "required": [
        "audio",
        "cover"
      ],
      "properties": {
        "audio": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Paths under release folder, WAV only"
        },
        "cover": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}